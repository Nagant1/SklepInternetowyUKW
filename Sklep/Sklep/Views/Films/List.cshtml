@model Sklep.ViewModel.IndexViewModel
@using Sklep.Infrastructure
@{
    ViewBag.Title = "List";
    //Layout = null;
}

<table style="background-color:burlywood">
    <tr><td colspan="3">NOWOŚCI</td></tr>
    <tr>
        @foreach(var film in Model.Top3NewestFilms)
        {
            <td><img src="@Url.PostersPath(film.PosterName)"/></td>
        }
    </tr>
</table>

<h2>@Model.Category.Name = @Model.Category.Desc</h2>

<table border=1px>
    @foreach (var film in @Model.FilmsFromCategory)
    {
        <tr>
            <td><img src="@Url.PostersPath(film.PosterName)"></td>
            <td>
                @film.Title
            </td>
            <td>@film.Price </td>
            <td>Dodaj do koszyka</td>
        </tr>
    }

</table>